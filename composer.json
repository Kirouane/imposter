{
    "name": "kirouane/imposter",
    "description": "API mock for PHPUnit",
    "type": "library",
    "homepage": "https://github.com/Kirouane/imposter",
    "license": "MIT",
    "authors": [
        {
            "name": "nassim.kirouane",
            "email": "nassim.kirouane@gmail.com",
            "role": "lead"
        }
    ],
    "support": {
        "issues": "https://github.com/Kirouane/imposter/issues"
    },
    "autoload": {
        "psr-4": {
            "Imposter\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Imposter\\" : ["test/unit", "test/api"]
        }
    },
    "config": {
        "platform": {
            "php": "7.0"
        }
    },
    "require": {
        "php" : ">=7.0",
        "ext-json" :"*",
        "symfony/console": ">= 2.0",
        "symfony/templating": ">= 2.0",
        "monolog/monolog": ">= 1.0",
        "guzzlehttp/guzzle": "^6.3",
        "react/http": "^0.8.3",
        "phpunit/phpunit": "^6.5"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "2.1.x-dev",
        "mockery/mockery": "^1.0@dev"
    }
}

{
    "name": "kirouane/imposter",
    "description": "API mock for PHPUnit",
    "type": "library",
    "minimum-stability":"dev",

    "homepage": "https://github.com/Kirouane/interval",
    "license": "MIT",
    "authors": [
        {
            "name": "nassim.kirouane",
            "email": "nassim.kirouane@gmail.com",
            "role": "lead"
        }
    ],
    "support": {
        "issues": "https://github.com/Kirouane/interval/issues"
    },
    "autoload": {
        "psr-4": {
            "Imposter\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Imposter\\" : ["test/unit", "test/api"]
        }
    },
    "config": {
        "platform": {
            "php": "7.0"
        }

    },
    "require": {
        "php" : ">=7.0",
        "ext-json" :"*"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^6.3@dev",
        "react/http": "dev-master",
        "phpunit/phpunit": "6.5.x-dev",
        "mockery/mockery": "^1.0@dev",
        "symfony/console": "^3.3",
        "php-coveralls/php-coveralls": "2.1.x-dev"
    }
}
